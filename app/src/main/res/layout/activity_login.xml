<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".LoginActivity"
    android:background="@mipmap/ic_bg"
    android:orientation="vertical"
    android:gravity="center">


    <ImageView
        android:id="@+id/loginImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:background="@mipmap/ic_appicon" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="程序锁-您贴心的隐私保镖"
        android:textColor="@android:color/background_light"
        android:gravity="center"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="用户："
        android:id="@+id/tv_login_username"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textColor="#fff8f8f8" />

    <EditText
        android:id="@+id/edt_login_password"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:layout_marginTop="30dip"
        android:password="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:background="@drawable/txtview_border"
        android:paddingRight="2dp"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />
    <Button
        android:id="@+id/btn_login"
        android:layout_width="150dip"
        android:layout_height="45dip"
        android:layout_marginTop="20dip"
        android:text="登录"
        android:gravity="center"
        android:background="@drawable/btn_bg"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="忘记密码"
        android:id="@+id/tv_login_forget"
        android:layout_alignTop="@+id/tv_login_forget"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textColor="#ff989898" />

</LinearLayout>
