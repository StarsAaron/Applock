<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".LoginActivity"
    android:background="@mipmap/ic_bg"
    android:orientation="vertical"
    android:gravity="center">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="当前锁定的应用："
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal"
        android:textColor="#fffcfcfc" />

    <ImageView
        android:id="@+id/iv_appicon"
        android:layout_width="180dp"
        android:layout_height="180dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="程序锁-您贴心的隐私保镖"
        android:textColor="@android:color/background_light"
        android:gravity="center"
        android:textSize="20dp"
        android:id="@+id/tv_appname" />

    <EditText
        android:id="@+id/edt_enter_password"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:layout_marginTop="30dip"
        android:password="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:background="@drawable/txtview_border"
        android:paddingRight="2dp"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="20dp" />
    <Button
        android:id="@+id/btn_OK"
        android:layout_width="150dip"
        android:layout_height="45dip"
        android:layout_marginTop="20dip"
        android:text="确定"
        android:gravity="center"
        android:background="@drawable/btn_bg"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="取消"
        android:id="@+id/tv_concel"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textColor="#ff989898"
        android:textSize="20dp" />

</LinearLayout>
